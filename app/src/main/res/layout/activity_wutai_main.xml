<?xml version="1.0" encoding="utf-8"?><android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fillViewport="true"    tools:context=".MainActivity">    <ScrollView        android:layout_width="match_parent"        android:layout_height="match_parent"        android:fillViewport="true">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <ListView                android:id="@+id/list_view"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:divider="#00c3c3c3"                android:dividerHeight="5dp"                android:nestedScrollingEnabled="true"                >            </ListView>        </LinearLayout>    </ScrollView>    <!--background 前景颜色 rippleColor 按下颜色-->    <android.support.design.widget.FloatingActionButton        android:id="@+id/fbt"        android:layout_width="50dp"        android:layout_height="50dp"        android:src="@drawable/reply"        android:layout_gravity="bottom|right"        android:layout_marginRight="13dp"        android:layout_marginBottom="15dp"        android:layout_margin="10dp"        app:rippleColor="#00eedd"        app:backgroundTint="@color/dingxiangse"        app:elevation="4dp"        /></android.support.design.widget.CoordinatorLayout>