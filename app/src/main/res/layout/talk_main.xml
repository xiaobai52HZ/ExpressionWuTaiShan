<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="wrap_content"    xmlns:tools="http://schemas.android.com/tools">    <LinearLayout        android:orientation="horizontal"        android:layout_width="match_parent"        android:layout_height="60dp">        <de.hdodenhof.circleimageview.CircleImageView            android:id="@+id/talk_user_pic_civ"            android:layout_width="60dp"            android:layout_height="match_parent"            android:padding="10dp"            android:src="@drawable/wutai"            />        <TextView            android:id="@+id/talk_user_name_tv"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:gravity="center|left"            android:textColor="@android:color/black"            android:textSize="18sp"            android:maxEms="10"            android:ellipsize="end"            />        <TextView            android:id="@+id/talk_time_tv"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:gravity="center|right"            tools:text="14:03"            android:layout_marginRight="10dp"             />    </LinearLayout>    <View        android:layout_width="match_parent"        android:layout_height="2dp"        android:background="#edecec"/>    <TextView        android:id="@+id/talk_content_tv"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:maxLines="8"        android:gravity="left|top"        android:padding="10dp"        android:textColor="#262424"        android:textSize="16sp"        />    <com.example.wutai.wutaimoutain.Talk.MyGridView        android:id="@+id/talk_all_pic_grid_view"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingLeft="10dp"        android:paddingRight="10dp"        android:horizontalSpacing="3dp"        android:verticalSpacing="3dp"        />    <LinearLayout        android:orientation="horizontal"        android:layout_width="match_parent"        android:layout_height="40dp">        <ImageView            android:id="@+id/dianzan"            android:layout_gravity="bottom|right"            android:layout_margin="7dp"            android:layout_weight="1"            android:src="@drawable/ic_dianzan"            android:layout_width="0dp"            android:layout_height="match_parent" />        <ImageView            android:id="@+id/review"            android:layout_gravity="bottom|right"            android:layout_margin="7dp"            android:layout_weight="1"            android:src="@drawable/ic_review"            android:layout_width="0dp"            android:layout_height="match_parent" />        <ImageView            android:id="@+id/fenxiang"            android:layout_gravity="bottom|right"            android:layout_margin="7dp"            android:layout_weight="1"            android:src="@drawable/ic_zhuanfaaa"            android:layout_width="0dp"            android:layout_height="match_parent" />    </LinearLayout>    <android.support.v7.widget.RecyclerView        android:id="@+id/talk_all_content_recy_view"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingLeft="10dp"        android:paddingRight="10dp"/>    <TextView        android:id="@+id/talk_content_bt"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="评论"        android:layout_margin="10dp"        android:paddingTop="2dp"        android:paddingBottom="2dp"        android:paddingLeft="10dp"        android:textSize="16sp"        android:textColor="#4b4747"        android:background="#e9e1e1"        />    <View        android:layout_width="match_parent"        android:layout_height="5dp"        android:background="#edecec"/></LinearLayout>