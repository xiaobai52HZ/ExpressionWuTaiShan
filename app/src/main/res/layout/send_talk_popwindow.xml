<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/send_talk_pop_window_bg" >

    <LinearLayout
        android:id="@+id/send_talk_pop_window_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:divider="@drawable/send_talk_pop_window_divier_line"
        android:showDividers="middle|beginning|end"
        android:orientation="vertical" >
        <Button
            android:id="@+id/item_popupwindows_camera"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/comment_bt_nobgd"
            android:textColor="#585858"
            android:textSize="18sp"
            android:text="拍照" />
        <Button
            android:id="@+id/item_popupwindows_Photo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/comment_bt_nobgd"
            android:textColor="#585858"
            android:textSize="18sp"
            android:text="从相册中选取" />
        <Button
            android:id="@+id/item_popupwindows_cancel"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/comment_bt_nobgd"
            android:textColor="#585858"
            android:textSize="18sp"
            android:text="取消" />
    </LinearLayout>

</RelativeLayout>